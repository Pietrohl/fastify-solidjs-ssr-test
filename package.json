{
    "name": "fastify_scaffold",
    "version": "1.0.0",
    "description": "Quick config for Fastify projects",
    "main": "./dist/index.js",
    "scripts": {
        "dev": "run-p watch:*",
        "watch:compile": "swc src -w --out-dir dist",
        "watch:dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
        "build": "swc src -d dist",
        "build:vite": "vite build src/public --outDir ../../dist/public --emptyOutDir",
        "start": "node dist/index.js NODE_ENV=production",
        "clean": "rm -rf dist",
        "debug": "run-s test:*",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint \"{src,apps,libs,test,spec}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@fastify/cookie": "^9.0.4",
        "@fastify/cors": "^8.3.0",
        "@fastify/helmet": "^11.0.0",
        "@fastify/static": "^6.11.2",
        "@fastify/swagger": "^8.9.0",
        "@fastify/type-provider-typebox": "^3.5.0",
        "@sinclair/typebox": "^0.31.14",
        "awilix": "^8.0.1",
        "dotenv": "^16.0.3",
        "fastify": "^4.22.0",
        "pino": "^8.15.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.5.0",
        "@swc/cli": "0.1.62",
        "@swc/core": "1.3.57",
        "@swc/jest": "^0.2.26",
        "@types/jest": "^29.5.1",
        "@types/node": "^20.1.1",
        "@types/react": "^18.2.22",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5",
        "pino-pretty": "^10.2.0",
        "prettier": "^2.8.8",
        "typescript": "^5.0.4",
        "vite": "^4.4.9"
    },
    "eslintIgnore": [],
    "eslintConfig": {
        "env": {
            "node": true,
            "jest": true
        },
        "parser": "@typescript-eslint/parser",
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier"
        ],
        "parserOptions": {
            "project": "./tsconfig.json",
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "root": true,
        "rules": {
            "no-console": [
                "error"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Pietrohl/ts_configs/node"
    },
    "author": "Pietro Labadessa",
    "license": "ISC"
}
